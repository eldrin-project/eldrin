            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"securepassword\",\n    \"username\": \"testuser\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/users/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
